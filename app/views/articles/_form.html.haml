= simple_form_for(@article, html: {multipart: true}) do |f|
  %ul.form-group
    - @article.errors.full_messages.each do |error|
      %li= error
  .form-group
    = f.input :title, label: "Title:", input_html: {class: 'form-control'}
  .form-group
    = f.input :body, as: :text, label: "Description", input_html: {class: 'form-control'}
  .form-group
    = image_tag @article.image.url if @article.image.exists?
    = f.input :image, as: :file, label: "Attach an Image:", input_html: {class: 'form-control'}
  .form-group
    = f.input :tag_list, label: "Tags:", input_html: {class: 'form-control'}
  .form-group
    = f.button :submit, class: 'btn-primary'
