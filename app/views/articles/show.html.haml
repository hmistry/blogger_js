.panel.panel-default
  .panel-heading
    %h3.panel-title= @article.title
  .panel-body
    %p= @article.body
%h3 Comments #{@article.comments.size}
.list-group
  = render partial: 'articles/comment', collection: @article.comments
  .div
    = render partial: 'comments/form'
.div
  %p= link_to "Edit Article", edit_article_path(@article)
  %p= link_to "Delete Article", article_path(@article), method: :delete, data: {confirm: "Really delete the article?"}
  %p= link_to "Back to Articles", articles_path

